<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false" auto-import="false">
	<import class="de.markusf.shout.model.Shout" />
	<class name="de.markusf.shout.model.impl.ShoutImpl" table="Shout_Shout">
		<cache usage="read-write" />
		<id name="shoutId" type="long">
			<generator class="assigned" />
		</id>
		<property name="senderId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="scopeId" type="com.liferay.portal.dao.orm.hibernate.LongType" />
		<property name="publishDate" type="org.hibernate.type.TimestampType" />
		<property name="message" type="com.liferay.portal.dao.orm.hibernate.StringType" />
	</class>
</hibernate-mapping>